@model List<SimplReaderMVC.Models.Reader.FeedItemVM>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/shared/_BootstrapLayout.basic.cshtml";
    AjaxOptions addSubscriptionAjaxOptions = new AjaxOptions
    {
        HttpMethod = "post",
        UpdateTargetId = "validationSummaryLogOn",
        OnSuccess = "ajaxFormSuccess"
    };
}



@foreach(var item in Model)
{
    <article>
        <h3>@item.Title</h3>
        <p> @Html.Raw(item.Content)</p>
        <div>
            <span class="badge badge-success">Posted: @item.DatePublished.ToShortDateString()</span><div class="pull-right"><span class="label">alice</span> <span class="label">story</span> <span class="label">blog</span> <span class="label">personal</span></div>
        </div> 
    </article>
}



<div class="modal hide fade" id="addSubscriptionModal">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3>Manage subscription</h3>
    </div>
    <div class="modal-body">
        @using (Ajax.BeginForm("LogOn", "Account", new { }, addSubscriptionAjaxOptions, new { @class = "form-horizontal" }))
        {
            <div class="control-group">
                <label class="control-label" for="inputEmail">Feed URL:</label>
                <div class="controls">
                  <div class="input-append">
                      <input class="input-xlarge" id="appendedInputButton" type="text">
                      <button class="btn btn-success" type="button">Go!</button>
                    </div>
                </div>
              </div>
            
        }
    </div>
@*    <div class="modal-footer">
        <a href="#" class="btn">Close</a>
        <a href="#" class="btn btn-primary">Save changes</a>
    </div>*@
</div>

@section Scripts
{
    <script type="text/javascript">
        jQuery(document).ready(function () {
            jQuery("#addSubscription").click(function (ev) {
                ev.preventDefault();
                console.log("init modal");
                jQuery("#addSubscriptionModal").modal('show');
            });
        });

    </script>    
}

